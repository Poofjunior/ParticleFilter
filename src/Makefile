# Makefile for ChunkySting Tester
# 
# As usual, you can build this software by typing
#
#     make
#

# ----- Make Macros -----

OPTFLAGS    =   -Os -pg
CXXFLAGS    =   -Wall -Wextra $(OPTFLAGS) -std=c++11#-pedantic 
CXX         =    g++
INCLUDES    =    
TARGETS     =    main
PARTICLE_OBJS = main.o particles.o map.o features.o commonMath.o \
                particle.o point.o laserScanner.o motionModel.o


# ----- Make Rules -----

# Your first (i.e., default) rule should not execute tests. It should be "all"
all:	$(TARGETS)


main:	$(PARTICLE_OBJS)
	$(CXX) $(LDFLAGS) $(CXXFLAGS) -o $@ $(PARTICLE_OBJS)

clean:
	rm -f $(TARGETS) $(PARTICLE_OBJS)

# ---- Dependencies (generated by typing ``cs70-c++ -MM *.cpp'') ----
commonMath.o: commonMath.cpp commonMath.hpp
features.o: features.cpp features.hpp point.hpp
laserScanner.o: laserScanner.cpp laserScanner.hpp point.hpp pose.hpp \
 commonMath.hpp map.hpp features.hpp
main.o: main.cpp particles.hpp map.hpp features.hpp point.hpp \
 particle.hpp pose.hpp laserScanner.hpp commonMath.hpp motionModel.hpp
map.o: map.cpp map.hpp features.hpp point.hpp
motionModel.o: motionModel.cpp motionModel.hpp pose.hpp commonMath.hpp
particle.o: particle.cpp particle.hpp pose.hpp laserScanner.hpp point.hpp \
 commonMath.hpp map.hpp features.hpp motionModel.hpp
particles.o: particles.cpp particles.hpp map.hpp features.hpp point.hpp \
 particle.hpp pose.hpp laserScanner.hpp commonMath.hpp motionModel.hpp
point.o: point.cpp point.hpp
 
